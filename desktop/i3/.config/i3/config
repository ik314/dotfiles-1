# run once
exec compton
exec --no-startup-id nm-applet
exec --no-startup-id /usr/lib64/polkit-gnome/polkit-gnome-authentication-agent-1

exec firefox
exec xflux -l 47 -g 19
#exec redshift
# launch a terminal on WS2 on startup
exec --no-startup-id i3-msg 'workspace $WS2; exec $terminal'
# launch a terminal at the projects folder on startup
exec --no-startup-id i3-msg 'workspace $WS3; exec $terminal -d ~/projects'

# drop down terminal
exec --no-startup-id ~/bin/dropdown-terminal.sh
for_window [instance="dropdown-terminal"] floating enable;
for_window [instance="dropdown-terminal"] move scratchpad; [instance="dropdown-terminal"] scratchpad show; move position 0px 24px; move scratchpad
bindsym $Mod+t [instance="dropdown-terminal"] scratchpad show
bindsym $Mod+Shift+t exec --no-startup-id ~/bin/dropdown-terminal.sh


################################################################################
# Bindings
################################################################################

# kill focused window
bindsym $Mod+Shift+q kill
bindsym Mod1+q kill

# launchers
bindsym $mod+d exec --no-startup-id ~/bin/rofi-gorice

bindsym $Mod+Return exec --no-startup-id $terminal

# partial screen shot with scrot
bindsym --release $Mod+Shift+c exec --no-startup-id scrot -s

# screen shot with scrot
bindsym Print exec --no-startup-id "scrot '%S.png' -e 'mv $f $$(xdg-user-dir PICTURES)/ArchLabs-%S-$wx$h.png'"
#; gpicview $$(xdg-user-dir PICTURES)/ArchLabs-%S-$wx$h.png'"

# logout
bindsym $Mod+x exec --no-startup-id ~/bin/rofi-logout

# audio
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioPause exec playerctl pause
bindsym XF86AudioPrev exec playerctl previous
bindsym XF86AudioNext exec playerctl next

# raise Volume
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer -D pulse sset Master 5%+ && \
            paplay /usr/share/sounds/freedesktop/stereo/audio-volume-change.oga
# lower Volume
bindsym XF86AudioLowerVolume exec --no-startup-id amixer -D pulse sset Master 5%- && \
            paplay /usr/share/sounds/freedesktop/stereo/audio-volume-change.oga
# toggle muting
bindsym XF86AudioMute exec --no-startup-id amixer -D pulse sset Master toggle-mute


