#########################################
#########################################
# Desktop config
#########################################
#########################################

#########################################
###         KEY DEFINITIONS          ####
#########################################
##     $Mod = Super key or Mod4        ##
##         Mod1 = ALT key              ##
##       Control = CTRL key            ##
##        Shift = SHIFT key            ##
##       Escape = ESCAPE key           ##
##    Return = ENTER or RETURN key     ##
##        Pause = PAUSE key            ##
##        Print = PRINT key            ##
##          Tab = TAB key              ##
#########################################

# Xresources      var      value       fallback
set_from_resource $bg      background  #19043C
set_from_resource $fg      foreground  #F1F1F1
set_from_resource $red     color1      #EE79A9
set_from_resource $green   color2      #8C9440
set_from_resource $yellow  color3      #DE935F
set_from_resource $blue    color4      #05C6F1
set_from_resource $purple  color5      #85678F
set_from_resource $cyan    color6      #5E8D87
set_from_resource $grey    color7      #969CD3
set_from_resource $white   color15     #F1F1F1
set_from_resource $black   color0      #19043C
set $orange #d08770
set $turq #88c0d0
set $li #65737e
set $mdk_bg #252c37
set $dk_bg #1b2129
set $md_bg #37414e

# class                 border  bg      text    indictr child_border
client.focused          $li     $bg     $fg     $li     $li
client.unfocused        $md_bg  $bg     $black  $bg     $md_bg
client.focused_inactive $md_bg  $bg     $black  $bg     $md_bg
client.urgent           $md_bg  $bg     $black  $bg     $md_bg
#client.urgent           $red    $bg     $red    $red    $red
client.placeholder      $li     $bg     $bg     $bg     $bg
client.background       $bg

# border & title (must be set to border pixel for gaps to work)
for_window [class="^.*"] border pixel 2, title_format "<b> %title </b>"

# font
font pango:Inconsolata Regular 12

# TODO switch to polybar
bar {
        status_command i3blocks -c ~/.config/i3blocks.conf
        position top
        font xft:Droid Sans Mono, FontAwesome 11

        colors {
            background $dk_bg

            focused_workspace $fg $fg $bg
            active_workspace $fg $fg $bg
            inactive_workspace $bg $bg $white
            urgent_workspace $red $red $bg
        }
}

################################################################################
# Variables
################################################################################

# $Mod = Super (Mod4) or Alt (Mod1)
set $Mod Mod1

# direction keys
set $left h
set $down j
set $up k
set $right l

set $WS1 "1"
set $WS2 "2"
set $WS3 "3"
set $WS4 "4"
set $WS5 "5"
set $WS6 "6"
set $WS7 "7"
set $WS8 "8"
set $WS9 "9"
set $WS10 "10"


# monitors
set $Mon1 HDMI1
set $Mon2 HDMI2

# the terminal emulator
set $terminal termite


################################################################################
# Autostart
################################################################################

# run with each reload
exec_always feh --bg-scale ~/.config/i3/wall
exec_always xrandr --output DP1 --auto --left-of HDMI2

#exec_always --no-startup-id start-compton
#exec_always --no-startup-id al-polybar-session
