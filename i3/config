# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command i3blocks -c ~/.config/i3blocks.conf
        position top
        font xft:Droid Sans Mono, FontAwesome 11

        colors {
            background $terminal_bg_gray
            #background #2F343F
            #background #002B36

            focused_workspace $pastel_beige $pastel_beige $terminal_bg_gray
            active_workspace $weldon_blue $weldon_blue #fafafa
            inactive_workspace $terminal_bg_gray $terminal_bg_gray #fafafa
            urgent_workspace $urgent_red $urgent_red #fafafa
        }
}

